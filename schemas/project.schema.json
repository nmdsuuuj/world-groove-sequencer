{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorldGrooveProject",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "patterns": {
      "type": "array",
      "items": {
        "$ref": "pattern.schema.json"
      }
    },
    "liveTakes": {
      "type": "array",
      "items": {
        "$ref": "livetake.schema.json"
      }
    },
    "song": {
      "$ref": "song.schema.json"
    }
  },
  "required": [
    "version",
    "patterns"
  ]
}