{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ornament",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": [
        "plain",
        "extended"
      ]
    },
    "internalDuration": {
      "type": "number"
    },
    "followMode": {
      "type": "string",
      "enum": [
        "overlap",
        "cut",
        "wait"
      ]
    },
    "playMode": {
      "type": "string",
      "enum": [
        "oneShot",
        "loop",
        "loopRoll"
      ]
    },
    "loopCount": {
      "type": [
        "integer",
        "string",
        "null"
      ]
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "ornamentEvent.schema.json"
      }
    }
  },
  "required": [
    "mode",
    "events"
  ]
}