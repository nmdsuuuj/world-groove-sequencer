{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TrackSegment",
  "type": "object",
  "properties": {
    "trackId": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "pattern",
        "livetake"
      ]
    },
    "refId": {
      "type": "string"
    },
    "startBar": {
      "type": "integer"
    },
    "repeatCount": {
      "type": "integer"
    }
  },
  "required": [
    "trackId",
    "type",
    "refId",
    "startBar",
    "repeatCount"
  ]
}