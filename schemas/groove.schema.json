{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GroovePattern",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "offset": {
            "type": "number"
          }
        },
        "required": [
          "offset"
        ]
      }
    }
  },
  "required": [
    "id",
    "steps"
  ]
}